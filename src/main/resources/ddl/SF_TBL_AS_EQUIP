CREATE TABLE wjlee.dbo.SF_TBL_AS_EQUIP (
    AS_EQUIP_ID    BIGINT IDENTITY(1,1) PRIMARY KEY,       -- 장비 고유 ID
    AS_ID          BIGINT NOT NULL,                        -- FK → AS_HEADER6.AS_ID
    TABLE_NAME     NVARCHAR(64),                            -- 장비 테이블명
    EQMNT_SEQ      NCHAR(3),                               -- 장비 고유 번호
    SUB_SEQ        NCHAR(3),                               -- 서브 번호 (서브 장비 구분)
    EQMNT_KIND     NCHAR(3),                               -- 메인장비 구분값
    EQMNT_NAME     NVARCHAR(64),                           -- 장비명 (조회값 or 당시 저장)
    USE_DATE       DATETIME,                               -- 장비 설치일
    USE_FLAG       NCHAR(1) NOT NULL DEFAULT '1',          -- 논리 삭제 여부 (1: 사용, 0: 삭제)
    CONSTRAINT FK_AS_HEADER FOREIGN KEY (AS_ID)
        REFERENCES wjlee.dbo.SF_TBL_AS_HEADER(AS_ID)
);